<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_fetch_sale_order_wizard" model="ir.ui.view">
        <field name="name">fetch_sale_order_wizard</field>
        <field name="model">fetch.sale.order.wizard</field>
        <field name="arch" type="xml">
            <form string="Fetch Sale Order">
                <h5>Do you want to fetch all the sale orders ?</h5>
                <br/>
                <group>
                    <field name="db_url"/>
                    <field name="db"/>
                    <field name="db_username"/>
                    <field name="db_password"/>
                </group>
                <footer>
                    <button name="action_fetch_sale_order" string="Fetch Sale Order From V17" type="object" class="oe_highlight"/>
                    <button special="cancel" string="Cancel" class="btn-danger"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
